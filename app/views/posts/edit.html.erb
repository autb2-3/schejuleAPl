<h3>スケジュール編集</h3>
 
 <%= form_for(@post) do |f| %>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_at ,"開始日" %></th>
          <td><%= f.datetime_field :start_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_at ,"終了日" %></th>
          <td><%= f.datetime_field :end_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :allday ,"終日" %></th>
          <td><%= f.check_box :allday %></td>
        </tr>
        
        <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td><%= f.text_area :memo %></td>
        </tr>
      </table>

      <div>
        <ul>
          <li class="button_t"><%= f.submit "登録完了する"%></li>
          <li class="new_post"><%= link_to "スケジュール一覧に戻る", :posts ,data: {"turbolinks" => false} %></li>
        </ul>
      </div>
    <% end %>